<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if @paginator.current_page > 1 %>
      <li class="page-item">
        <%= link_to 'Previous', "?page=#{@paginator.current_page - 1}", class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% end %>

    <% (1..@paginator.total_pages).each do |page_number| %>
      <% if @paginator.current_page == page_number %>
        <li class="page-item active">
          <span class="page-link"><%= page_number %></span>
        </li>
      <% else %>
        <li class="page-item">
          <%= link_to page_number, "?page=#{page_number}", class: 'page-link' %>
        </li>
      <% end %>
    <% end %>

    <% if @paginator.current_page < @paginator.total_pages %>
      <li class="page-item">
        <%= link_to 'Next', "?page=#{@paginator.current_page + 1}", class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
