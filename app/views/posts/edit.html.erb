<div class="login-container d-flex justify-content-center align-items-center mt-4">
    <div class="card__login card p-4 w-50 mt-5">
        <h1 class="text-center">Editar Post</h1>

        <%= form_with model: @post, url: post_path(@post), method: :patch do |form| %>
        <div class="form-group mb-3">
            <%= form.label :título, class: "form-label"%>
            <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :conteúdo %>
            <%= form.text_area :content, class: 'form-control area__texto' %>
        </div>
        <div class="form-group d-grid">
            <%= form.submit 'Atualizar', class: 'button__login mt-3' %>
        </div>
        <% end %>
    </div>
</div>