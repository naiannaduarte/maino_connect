<div class="container mt-5">
  <div class="post">
    <h1><%= @post.title %></h1>
    <p><%= @post.content %></p>
    <p class="text-muted">Publicado em: <%= @post.created_at.strftime("%d/%m/%Y %H:%M") %></p>
  </div>


  <h3>Comentários</h3>
  <% @post.comments.each do |comment| %>
    <div class="comment border p-3 mb-2">
      <p><%= comment.content %></p>
      <p class="text-muted">Comentado em: <%= comment.created_at.strftime("%d/%m/%Y %H:%M") %></p>
    </div>
  <% end %>

  <h4>Deixe um comentário:</h4>
  <%= form_with model: [@post, Comment.new], local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.text_area :content, class: "form-control", placeholder: "Escreva seu comentário aqui..." %>
    </div>
    <%= form.submit "Enviar", class: "btn btn-primary" %>
  <% end %>
</div>
