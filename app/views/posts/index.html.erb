<div class="text-center">
    <h1 class="mt-5">Ãšltimos Posts</h1>
    <%= link_to 'Criar Novo Post', new_post_path, class: 'text-dark text-decoration-none' %>
</div>

<div class="row m-4">
    <% @posts.each do |post| %>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body card_post shadow-lg">
                <h5><%= link_to post.title, post_path(post), class: 'text-dark text-decoration-none' %></h5>
                <p class="card-text card_content"><%= post.content.truncate(200) %></p>
                <p><small>Postado por: <%= post.user.name %> em <%= post.created_at.strftime("%d/%m/%Y %H:%M")%></small></p>
                <%= link_to 'Acessar Post', post_path(post), class: 'button__login text-center' %>
            </div>
        </div>
    </div>
    <% end %>
    <%= paginate @posts, theme: 'bootstrap-4' %>
</div>
